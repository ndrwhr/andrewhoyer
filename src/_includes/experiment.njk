<li class="experiment">
  <div class="experiment__background"></div>
  <a href="{{ experiment.url }}" class="experiment__link"></a>

  <div href="{{ experiment.url }}" class="experiment__canvas">
    <svg
      class="experiment__canvas-svg"
      xmlns="http://www.w3.org/2000/svg"
      version="1.1"
      strokeDashoffset="0"
      data-points="{{ experiment.points }}"
    >
      <path />
    </svg>
  </div>

  <div class="experiment__content">
    <h3 class="experiment__header">
      {{ experiment.name }}
    </h3>

    <p class="experiment__description">
      {{ experiment.description | safe }}
    </p>

    <ul class="experiment__tags">
      {% for tag in experiment.tags %}
        <li class="experiment__tag">{{ tag }}</li>
      {% endfor %}

      {% if experiment.chromeExperimentURL %}
        <li class="experiment__tag experiment__tag--chrome experiment__tag--link">
          <a target="_blank" href="{{ experiment.chromeExperimentURL }}">
            Experiment
          </a>
        </li>
      {% endif %}

      {% if experiment.repo %}
        <li class="experiment__tag experiment__tag--source experiment__tag--link">
          <a target="_blank" href="{{ experiment.repo }}">
            Open Source
          </a>
        </li>
      {% endif %}
    </ul>

    <p class="experiment__extra-info">
      {{ experiment.date | date("%b %Y") }}
    </p>
  </div>
</li>
